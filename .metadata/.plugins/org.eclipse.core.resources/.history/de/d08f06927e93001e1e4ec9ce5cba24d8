package project;

import java.io.IOException;
import java.io.PrintWriter;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;

import jakarta.servlet.annotation.WebServlet;
import jakarta.servlet.http.HttpServlet;
import jakarta.servlet.http.HttpServletRequest;
import jakarta.servlet.http.HttpServletResponse;



@WebServlet("/MoodChartDataServlet")
public class MoodChartDataServlet extends HttpServlet {
    private static final long serialVersionUID = 1L;

    protected void doGet(HttpServletRequest request, HttpServletResponse response) throws IOException {
        response.setContentType("application/json");
        PrintWriter out = response.getWriter();

        try (Connection connection = DriverManager.getConnection("jdbc:mysql://localhost:3306/project", "root", "password")) {
            String sqlQuery = "SELECT mood, COUNT(*) as count FROM moodentry GROUP BY mood";

            try (PreparedStatement preparedStatement = connection.prepareStatement(sqlQuery)) {
                try (ResultSet resultSet = preparedStatement.executeQuery()) {
                    List<String> labels = new ArrayList<>();
                    List<Integer> values = new ArrayList<>();
                    List<String> colors = new ArrayList<>();

                    while (resultSet.next()) {
                        String mood = resultSet.getString("mood");
                        int count = resultSet.getInt("count");

                        labels.add(mood);
                        values.add(count);

                        // You can set colors based on your preference
                        // Here, we are using a simple array of colors
                        colors.add(getColorForMood(mood));
                    }

                    // Convert data to JSON format
                    String jsonData = "{ \"labels\": " + labels + ", \"values\": " + values + ", \"colors\": " + colors + " }";

                    out.print(jsonData);
                }
            }

        } catch (SQLException e) {
            e.printStackTrace();
            response.setStatus(HttpServletResponse.SC_INTERNAL_SERVER_ERROR);
            out.print("{ \"error\": \"Internal Server Error\" }");
        }
    }

    // You can customize this method to assign colors based on mood
    private String getColorForMood(String mood) {
        // Implement your logic to map mood to colors
        // For simplicity, we are using a predefined set of colors
        if ("Happy".equalsIgnoreCase(mood)) {
            return "'#FF6384'";
        } else if ("Sad".equalsIgnoreCase(mood)) {
            return "'#36A2EB'";
        } else if ("Excited".equalsIgnoreCase(mood)) {
            return "'#FFCE56'";
        } else {
            // Default color
            return "'#A4A4A4'";
        }
    }
}
